<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="homeautologic"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Sample Thing Type -->
    <thing-type id="sensor">
        <label>HomeAutoLogic Binding Thing</label>
        <description>Sensor thing for HomeAutoLogic Binding</description>

        <channels>
            <channel id="temperature" typeId="temperature" />
            <channel id="humidity" typeId="humidity" />
        </channels>
        
        <config-description>
            <parameter name="ip" type="text" required="true">
                <label>IP address</label>
                <description>Specifies the IP address of the device.</description>
            </parameter>
            <parameter name="refresh" type="integer" min="1">
                <label>Refresh interval</label>
                <description>Specifies the refresh interval in seconds.</description>
                <default>5</default>
            </parameter>
        </config-description>
    </thing-type>
    
        <!-- Sample Thing Type -->
    <thing-type id="switch">
        <label>HomeAutoLogic Binding Thing</label>
        <description>Switch thing for HomeAutoLogic Binding</description>

        <channels>
            <channel id="onoff" typeId="onoff"/>
        </channels>
        
        <config-description>
            <parameter name="ip" type="text" required="true">
                <label>IP address</label>
                <description>Specifies the IP address of the device.</description>
            </parameter>
            <parameter name="refresh" type="integer" min="1">
                <label>Refresh interval</label>
                <description>Specifies the refresh interval in seconds.</description>
                <default>5</default>
            </parameter>
        </config-description>
    </thing-type>

     <channel-type id="onoff">
        <item-type>Switch</item-type>
        <label>Switch</label>
        <description>Turns the power on or off</description>
        <category>Switch</category>
    </channel-type>
    
    
    <channel-type id="temperature">
        <item-type>Number</item-type>
        <label>Temperature</label>
        <description>Current temperature in degrees celsius</description>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.2f Â°C">
        </state>
    </channel-type>

    <channel-type id="humidity">
        <item-type>Number</item-type>
        <label>Humidity</label>
        <description>Current humidity in %</description>
        <category>Humidity</category>
        <state readOnly="true" pattern="%.2f %%">
        </state>
    </channel-type>

</thing:thing-descriptions>
